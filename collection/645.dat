function SumOfLogs(const A: array of Integer): Extended; overload;
{$IFDEF FPC}
const
{$ELSE}
resourcestring
{$ENDIF}
  sNotPositive = 'All elements of array A must be > 0';
var
  Elem: Integer;
begin
  Result := 0.0;
  for Elem in A do
  begin
    if Elem <= 0 then
      raise SysUtils.EArgumentOutOfRangeException.Create(sNotPositive);
    Result := Result + System.Ln(Elem);
  end;
end;